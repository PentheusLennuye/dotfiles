[sssd]
config_file_version = 2
domains = cummings-online.ca
services = nss, pam

[nss]

[pam]
offline_credentials_expiration = 60


# DOMAINS --------------------------------------------------------

[domain/cummings-online.ca]
cache_credentials = True
# min_id determines at what level sssd ignores the id
min_id = 10000

auth_provider = krb5
krb5_kpasswd = krb5.<% domain %>
krb5_realm = <% REALM %>
krb5_server = krb5.<% domain %>

id_provider = ldap
ldap_access_filter = (objectClass=posixAccount)
ldap_default_bind_dn = uid=binddn,ou=services,<% dc %>
ldap_default_authtok = <% binddn_authtok %>
ldap_id_use_start_tls = True
ldap_search_base = dc=<% dc %>
ldap_group_search_base = ou=groups,<% dc%$>
ldap_group_member = memberUid
ldap_group_object_class = posixGroup
ldap_tls_cacert = /etc/ssl/certs/ca-certificates.crt
ldap_tls_reqcert = hard
ldap_uri = ldap://ldap.<% domain %>

