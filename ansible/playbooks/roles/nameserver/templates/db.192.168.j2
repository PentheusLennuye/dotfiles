$TTL {{ ttl }}
@ IN SOA ns.cummings-online.local {{ contact }}.cummings-online.local. (
 {{ serial }} ; serial
 {{ refresh }} ; refresh
 {{ retry }} ; retry
 {{ expire }} ; expire
 {{ negative_cache_ttl }} ; negative cache ttl
)

; Required nameserver records ----------------------------------------
@           IN    NS    ns.cummings-online.local.
ns          IN    A     {{ ansible_default_ipv4.address }}

; PTR --------------------------------------------------------------
{% for subnet in subnets %}
{% for hostname, hostaddress in subnet["hosts"].items() %}
{{ hostaddress }}.{{ subnet["netid"] }} IN PTR {{ hostname }}.cummings-online.local.
{% endfor %}
{% endfor %}
