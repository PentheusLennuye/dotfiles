acl "trusted" {
{% for key in trusted_ips %}
  {{ key }};
{% endfor %}
};
options {
    allow-recursion { trusted; };
    allow-transfer { none; };
	directory "/var/cache/bind";
	dnssec-validation auto;
    forwarders {
    {% for key in forwarders %}
      {{ key }};
    {% endfor %}
    };

    listen-on { any; };
	listen-on-v6 { {{ v6ports }}; };
    recursion yes;
};
